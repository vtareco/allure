<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" method="upgrade" client="site">
	<name>Customer Dashboard</name>
	<author>foobla</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2007 - 2013 foobla.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@foobla.com</authorEmail>
	<authorUrl>foobla.com</authorUrl>
	<version>3.1</version>
	<description>This module shows essential block for customer, designed for obHelpDesk Dashboard</description>
	<files>
		<filename module="mod_obhelpdesk_customer">mod_obhelpdesk_customer.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="show_kb" type="radio" class="btn-group" default="1" label="MOD_OBHELPDESK_CUSTOMER_SHOWKB" description="MOD_OBHELPDESK_CUSTOMER_SHOWKB_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="kb_link" type="text" label="MOD_OBHELPDESK_CUSTOMER_KBLINK" description="MOD_OBHELPDESK_CUSTOMER_KBLINK_DESC" />
			
				<field name="show_orders" type="radio" class="btn-group" default="1" label="MOD_OBHELPDESK_CUSTOMER_SHOWORDERS" description="MOD_OBHELPDESK_CUSTOMER_ORDERSLINK_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="orders_link" type="text" label="MOD_OBHELPDESK_CUSTOMER_ORDERSLINK" description="MOD_OBHELPDESK_CUSTOMER_ORDERSLINK_DESC" />
				
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
			</fieldset>
		</fields>
	</config>
</extension>